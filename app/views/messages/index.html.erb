<div class="panel panel-default">
  <div class="panel-heading">
    メッセージ一覧
  </div>
    
  <div class="panel-body">
    <% @messages.each do |message| %>
      <span class="label label-info"><%= message.name %></span>
      <%= message.body %>
      <br>
    <% end %>
  </div>
</div>

<%= form_for(@message, :html => {:class => "panel panel-default"}) do |f| %>
  <div class="panel-body">
    <div class="form-group">
      <%= f.label :name, "名前:" %>
      <%= f.text_field :name, class: "form-control", :placeholder => "名前" %>
    </div>
  
    <div class="form-group">
      <%= f.label :body, "内容:" %>
      <%= f.text_area :body, class: "form-control", rows: "3", :placeholder => "内容を入力してください" %>
    </div>
  
    <div class="text-center">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
