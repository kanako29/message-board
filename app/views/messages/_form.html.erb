<%= form_for(@message, :html => {:class => "panel panel-default"}) do |f| %>
  <% if @message.errors.present? %>
    <div class="alert alert-danger">
      <%= alert %>
      <ul>
        <% @message.errors.full_messages.each do |full_message| %>
          <li>
            <%= full_message %>
          </li>
        <% end %> 
      </ul>
    </div>
  <% end %>

  <div class="panel-body">
    <div class="form-group">
      <%= f.label :name, "名前:" %>
      <%= f.text_field :name, class: "form-control", :placeholder => "太郎" %>
    </div>
    
    <div class="form-group">
      <%= f.label :age, "年齢:" %>
      <%= f.text_field :age, class: "form-control", :placeholder => "20" %>
    </div>
  
    <div class="form-group">
      <%= f.label :body, "内容:" %>
      <%= f.text_area :body, class: "form-control", rows: "3", :placeholder => "内容を入力してください" %>
    </div>
  
    <div class="text-center">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
